{
    "latex-workshop.latex.recipes": [
        {
            "name": "Complete compilation",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "Faster Compilation",
            "tools": [
                "latexmk_once"
            ]
        },
        {
            "name": "Fastest Compilation",
            "tools": [
                "lualatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_once",
            "command": "latexmk",
            "args": [
                "--e",
                "$max_repeat=1",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "--shell-escape",
                "--synctex=1",
                "--file-line-error",
                "--halt-on-error",
                "--output-directory=build",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.outDir": "./build",
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.intellisense.package.extra": [
        "siunitx",
        "hyperref"
    ],
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnSave": true,
    "files.associations": {
        "*.trsl": "latex",
        "*.cls": "latex",
        "*.sty": "latex"
    },
    "files.encoding": "utf8",
    "auto-run-command.rules": [
        {
            "condition": "isRunningInContainer",
            "command": "latex-workshop.compilerlog",
            "message": "Open LaTeX Compiler Log"
        }
    ],
    "cSpell.language": "en,de-de"
}