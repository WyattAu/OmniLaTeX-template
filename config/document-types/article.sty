\newcommand*{\omnilatex@articlefrontpage}{%
    \begin{titlepage}
        \thispagestyle{empty}%
        \begin{center}
            {\Large \textsc{Journal of Applied OmniLaTeX}}\\[1.25\baselineskip]
            {\huge\bfseries\@title}\par\vspace{1.5\baselineskip}
            {\large\@author}\par\vspace{0.75\baselineskip}
            {\small\@date}\par\vspace{2\baselineskip}
        \end{center}
        \begin{abstract}
            \@subtitle
        \end{abstract}
        \vspace{1.5\baselineskip}
        \begin{center}
            \begin{tabular}{@{}p{0.3\textwidth}p{0.6\textwidth}@{}}
                Keywords: & \@keywords \\\n+                DOI: & \@doi \\\n+                Contact: & \@contact \\\n+            \end{tabular}
        \end{center}
        \vfill
        \noindent\rule{\textwidth}{0.4pt}\par
        \noindent\textsf{\textbf{Author Affiliations}}\par
        \@affiliation
    \end{titlepage}
}

\renewcommand{\maketitle}{%
    \omnilatex@articlefrontpage
    \setcounter{footnote}{0}% reset after titlepage
    \let\thanks\@gobble
}

\providecommand*{\@subtitle}{\relax}
\providecommand*{\subtitle}[1]{\gdef\@subtitle{#1}}
\providecommand*{\@keywords}{n/a}
\providecommand*{\keywords}[1]{\gdef\@keywords{#1}}
\providecommand*{\@doi}{pending}
\providecommand*{\doi}[1]{\gdef\@doi{#1}}
\providecommand*{\@contact}{correspondence@example.com}
\providecommand*{\contact}[1]{\gdef\@contact{#1}}
\providecommand*{\@affiliation}{Independent Researcher}
\providecommand*{\affiliation}[1]{\gdef\@affiliation{#1}}

\makeatother

