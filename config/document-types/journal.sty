\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{config/document-types/journal}[2025-10-18 OmniLaTeX journal profile]

\documenttype{Journal Paper}
\KOMAoptions{titlepage=true,twoside=false}
\setcounter{secnumdepth}{3}
\setcounter{tocdepth}{3}

\makeatletter

\newcommand*{\omnilatex@journalfrontpage}{%
    \begin{titlepage}
        \thispagestyle{empty}%
        \begin{flushright}
            {\small \textsf{\@journalname}}\\
            {\small Volume \@journalvolume\ (\@journalyear)}\\
            {\small Issue \@journalissue\ \textbullet{} pp.~\@journalpages}
        \end{flushright}
        \vspace{2\baselineskip}
        \begin{center}
            {\Huge\bfseries \@title}\par\vspace{1.5\baselineskip}
            {\large \@author}\par\vspace{1\baselineskip}
            {\small \@affiliation}\par\vspace{0.75\baselineskip}
            {\small Correspondence: \@contact}
        \end{center}
        \vspace{1.5\baselineskip}
        \noindent\textbf{Article Type:}~\@articletype\par\vspace{0.65\baselineskip}
        \begin{abstract}
            \@subtitle
        \end{abstract}
        \vspace{0.75\baselineskip}
        \noindent\textbf{Keywords:}~\@keywords\par
        \noindent\textbf{DOI:}~\@doi\par
        \vspace{1.5\baselineskip}
        \noindent\textbf{Highlights}\par
        \begin{itemize}[leftmargin=1.5em]
            \forcsvlist{\item }{\@highlights}
        \end{itemize}
        \vfill
        \noindent\rule{\textwidth}{0.4pt}\par
        \noindent\small Received \@receiveddate{} \textbullet{} Accepted \@accepteddate{} \textbullet{} Published \@publisheddate
    \end{titlepage}
}

\renewcommand{\maketitle}{%
    \omnilatex@journalfrontpage
    \setcounter{footnote}{0}%
    \let\thanks\@gobble
}

